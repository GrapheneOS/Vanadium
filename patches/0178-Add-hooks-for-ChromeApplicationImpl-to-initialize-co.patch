+++ b/chrome/android/chrome_ext_java_sources.gni
@@ -14,4 +14,5 @@ chrome_ext_java_sources = [
   "java/src/org/chromium/chrome/browser/referrer/settings/CrossOriginReferrerPolicyPreference.java",
