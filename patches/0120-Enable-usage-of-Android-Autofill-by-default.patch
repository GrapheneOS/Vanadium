 #if BUILDFLAG(IS_ANDROID)
   registry->RegisterBooleanPref(prefs::kAutofillUsingVirtualViewStructure,
-                                false);
+                                true);
   registry->RegisterBooleanPref(
       prefs::kAutofillThirdPartyPasswordManagersAllowed, true);
