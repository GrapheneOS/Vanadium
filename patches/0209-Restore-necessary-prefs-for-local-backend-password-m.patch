   registry->RegisterBooleanPref(prefs::kClearingUndecryptablePasswords, false);
-#endif
 
 #if BUILDFLAG(IS_WIN) || BUILDFLAG(IS_MAC) || BUILDFLAG(IS_LINUX) || \
     BUILDFLAG(IS_IOS)
