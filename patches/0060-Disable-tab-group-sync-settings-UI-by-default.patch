+BASE_DECLARE_FEATURE(kTabGroupSyncAutoOpenKillSwitch);
+
 BASE_DECLARE_FEATURE(kRestrictDownloadOnSyncedTabs);
 
 BASE_DECLARE_FEATURE(kUseAlternateHistorySyncIllustration);
